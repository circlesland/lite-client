{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*", "libs/**/*"],
  "exclude": ["node_modules/*", "public/*"],
  "compilerOptions": {
    "importsNotUsedAsValues": "remove",
    "types": ["svelte", "@types/snowpack-env"],
    "target": "ES2020" // "ES3" (default), "ES5", "ES6"/"ES2015", "ES2016", "ES2017" or "ESNext".
  }
}
